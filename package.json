{
  "name": "bfc-status-check",
  "version": "1.0.0",
  "description": "A library for checking the status of VCs using BFC-Status.",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/jfelixh/bfc-status-check.git"
  },
  "license": "MIT",
  "type": "module",
  "keywords": [
    "bloom filter cascade",
    "verifiable credentials",
    "vc",
    "status check"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs -w",
    "clean": "rimraf dist",
    "ci": "npm run build && npm run check-format",
    "check-format": "prettier --write .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@digitalcredentials/vc": "^9.0.1",
    "@digitalcredentials/vc-data-model": "^2.0.0",
    "alchemy-sdk": "^3.4.7",
    "caip": "^1.1.1",
    "did-jwt-vc": "^4.0.4",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "kzg-wasm": "^0.5.0",
    "moralis": "^2.27.2",
    "padded-bloom-filter-cascade": "github:jfelixh/padded-bloom-filter-cascade",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.9.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "rollup": "^4.31.0",
    "rollup-plugin-dts": "^6.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  }
}
